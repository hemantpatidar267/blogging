<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Tittle</th>
      <th>Context</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.tittle %></td>
        <td><%= post.context %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to "view", post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div><%= flash[:notice] %></div>


<form class="form-inline", action="/  ", method="get">
    <input class="form-control mr-sm-2" type="search" placeholder="Tittle", name="tittle" >
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

<%= button_to "Sign out", destroy_user_session_path, method: :delete %>
