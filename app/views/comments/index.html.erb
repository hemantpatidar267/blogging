<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Context</th>
      <th>post_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment.each do |comment| %>
      <tr>
        <td><%= comment.context %></td>
        <td><%= comment.post_id %></td>
        <td><%= link_to "view", comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
